<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bamboo_background"
    android:fitsSystemWindows="true">

    <!-- Top Bar / Header Area with bamboo styling -->
    <FrameLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bamboo_status_bg"
        android:elevation="4dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:minWidth="0dp"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="@color/green"
                android:textSize="14sp"
                app:icon="@android:drawable/ic_menu_revert"
                app:iconSize="18dp"
                app:iconTint="@color/green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Title with icon -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/clawMachineTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05"
                    android:text="ðŸŽ® Claw Machine"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Tries Counter with enhanced styling -->
            <FrameLayout
                android:id="@+id/triesLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bamboo_button_pale_green"
                android:paddingHorizontal="14dp"
                android:paddingVertical="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/triesText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="5/5"
                        android:textColor="@color/green"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/triesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="ðŸŽ¯ Tries"
                        android:textColor="@color/gray"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/timerText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/tan"
                        android:textSize="10sp"
                        android:visibility="gone"
                        tools:text="â± 4:30" />

                </LinearLayout>
            </FrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <!-- Game Area with bamboo frame -->
    <FrameLayout
        android:id="@+id/gameArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/claw_game_bamboo_frame"
        android:elevation="4dp"
        app:layout_constraintBottom_toTopOf="@+id/grabButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gameContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="14dp"
            android:clipChildren="false">

            <!-- Enhanced Drop Zone -->
            <View
                android:id="@+id/dropZone"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:background="@drawable/drop_zone_enhanced"
                android:elevation="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Drop Zone Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ•³ï¸"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/dropZone"
                app:layout_constraintEnd_toEndOf="@id/dropZone"
                app:layout_constraintStart_toStartOf="@id/dropZone"
                app:layout_constraintTop_toTopOf="@id/dropZone" />

            <!-- Claw Group (Synced horizontal movement) -->
            <FrameLayout
                android:id="@+id/clawGroup"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Claw String with better styling -->
                <View
                    android:id="@+id/clawString"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/claw_string_gradient"
                    android:pivotY="0"
                    android:scaleY="0.01" />

                <!-- Bamboo Claw -->
                <ImageView
                    android:id="@+id/claw"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="Claw"
                    android:src="@drawable/bamboo_claw"
                    android:translationZ="10dp" />
            </FrameLayout>

            <!-- Prizes with themed icons (Changed to TextView to show emojis) -->
            <TextView
                android:id="@+id/prize1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="110dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/prize_bamboo"
                android:contentDescription="Bamboo Prize"
                android:elevation="6dp"
                android:gravity="center"
                android:textSize="28sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="ðŸŽ‹" />

            <TextView
                android:id="@+id/prize2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/prize_carrot"
                android:contentDescription="Carrot Prize"
                android:elevation="6dp"
                android:gravity="center"
                android:textSize="28sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/prize1"
                tools:text="ðŸ¥•" />

            <TextView
                android:id="@+id/prize3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/prize_apple"
                android:contentDescription="Apple Prize"
                android:elevation="6dp"
                android:gravity="center"
                android:textSize="28sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/prize2"
                tools:text="ðŸŽ" />

            <TextView
                android:id="@+id/prize4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/prize_grape"
                android:contentDescription="Grape Prize"
                android:elevation="6dp"
                android:gravity="center"
                android:textSize="28sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/prize3"
                tools:text="ðŸ‡" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <!-- Enhanced Grab Button -->
    <Button
        android:id="@+id/grabButton"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bamboo_button_green"
        android:elevation="8dp"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.02"
        android:stateListAnimator="@null"
        android:text="ðŸŽ¯ HOLD TO MOVE â€¢ RELEASE TO GRAB ðŸŽ¯"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/characterArea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Character Area with enhanced styling -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/characterArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:id="@+id/speechBubble"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bamboo_speech_bubble"
            android:elevation="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/characterIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/bubbleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="14dp"
                android:text="ðŸŽ® Ready to play? Hold the button to move the claw!"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </FrameLayout>

        <ImageView
            android:id="@+id/characterIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="BaoBao"
            android:elevation="8dp"
            android:src="@drawable/baobao_main_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>