<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bamboo_background"
    android:fitsSystemWindows="true">

    <!-- Top Bar / Header Area -->
    <FrameLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bamboo_status_bg"
        android:paddingVertical="6dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp">

            <!-- 1. Back Button (Left) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                android:minWidth="0dp"
                android:text="Back"
                android:textAllCaps="false"
                android:textColor="@color/green"
                android:textSize="13sp"
                app:icon="@drawable/ic_back_bamboo"
                app:iconSize="16dp"
                app:iconTint="@color/green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- 2. Status Area (Right) -->
            <LinearLayout
                android:id="@+id/statusArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Buy Tries Button (Green) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/buyTriesButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    app:cardBackgroundColor="@color/green"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="1dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp">

                        <TextView
                            android:id="@+id/buyTriesText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand"
                            android:text="+1 Try"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/buyTriesCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand"
                            android:text="50 âœ·"
                            android:textColor="@color/white"
                            android:textSize="9sp" />

                        <TextView
                            android:id="@+id/buyTriesRemaining"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand"
                            android:text="10/10"
                            android:textColor="@color/white"
                            android:textSize="8sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Tries Counter (Pale Green) -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/triesLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/pale_green"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/green"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp">

                        <TextView
                            android:id="@+id/triesText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand"
                            android:text="5/5"
                            android:textColor="@color/green"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/triesLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand"
                            android:text="Tries"
                            android:textColor="@color/gray"
                            android:textSize="9sp" />

                        <TextView
                            android:id="@+id/timerText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/quicksand"
                            android:textColor="@color/tan"
                            android:textSize="8sp"
                            android:visibility="gone"
                            tools:text="4:30"
                            tools:visibility="visible" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- 3. Title Area (Center) -->
            <LinearLayout
                android:id="@+id/titleArea"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/statusArea"
                app:layout_constraintStart_toEndOf="@id/backButton"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_claw_machine_logo" />

                <TextView
                    android:id="@+id/clawMachineTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/quicksand"
                    android:maxLines="1"
                    android:text="Claws for Paws"
                    android:textColor="@color/green"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <!-- Game Area -->
    <FrameLayout
        android:id="@+id/gameArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/claw_game_bamboo_frame"
        app:layout_constraintBottom_toTopOf="@+id/grabButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout">

        <FrameLayout
            android:id="@+id/gameContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="14dp"
            android:clipChildren="false">

            <View
                android:id="@+id/dropZone"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_gravity="bottom|start"
                android:background="@drawable/drop_zone_enhanced"
                android:alpha="0.8" />

            <TextView
                android:id="@+id/dropZoneLabel"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_gravity="bottom|start"
                android:gravity="center"
                android:text="GOAL"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="12sp"
                android:alpha="0.6" />

            <FrameLayout
                android:id="@+id/clawGroup"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="top|start">

                <View
                    android:id="@+id/clawString"
                    android:layout_width="6dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/claw_string_gradient"
                    android:pivotY="0"
                    android:scaleY="0.01" />

                <ImageView
                    android:id="@+id/claw"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="Claw"
                    android:src="@drawable/bamboo_claw" />
            </FrameLayout>

            <TextView
                android:id="@+id/prize1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/prize_bamboo"
                android:elevation="4dp"
                android:gravity="center"
                android:textSize="24sp"
                android:visibility="invisible"
                tools:text="ðŸŽ‹" />

            <TextView
                android:id="@+id/prize2"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/prize_carrot"
                android:elevation="4dp"
                android:gravity="center"
                android:textSize="24sp"
                android:visibility="invisible"
                tools:text="ðŸ¥•" />

            <TextView
                android:id="@+id/prize3"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/prize_apple"
                android:elevation="4dp"
                android:gravity="center"
                android:textSize="24sp"
                android:visibility="invisible"
                tools:text="ðŸŽ" />

            <TextView
                android:id="@+id/prize4"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/prize_grape"
                android:elevation="4dp"
                android:gravity="center"
                android:textSize="24sp"
                android:visibility="invisible"
                tools:text="ðŸ‡" />
        </FrameLayout>
    </FrameLayout>

    <!-- Grab Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/grabButton"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bamboo_button_green"
        app:backgroundTint="@null"
        android:fontFamily="@font/quicksand"
        android:text="HOLD TO MOVE â€¢ RELEASE TO GRAB"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_target_bamboo"
        app:iconGravity="textStart"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/characterArea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Character Area -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/characterArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:id="@+id/speechBubble"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bamboo_speech_bubble"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/characterIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/bubbleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                android:gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="14dp"
                android:paddingEnd="24dp"
                android:text="Ready to play? Hold the button to move the claw!"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </FrameLayout>

        <ImageView
            android:id="@+id/characterIcon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="BaoBao"
            android:src="@drawable/baobao_main_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>