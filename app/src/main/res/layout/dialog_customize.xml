<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bamboo_dialog_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customize"
                    android:textColor="@color/green"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05" />

                <View
                    android:layout_width="60dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/green"
                    android:alpha="0.6" />

                <!-- Currency Display -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ·"
                        android:textColor="@color/tan"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/currencyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="1,250"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <!-- BGM Selection Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/off_white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="@color/green"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽµ Background Music"
                        android:textColor="@color/green"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- BGM Option 1 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bgmKakushigotoButton"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:text="Kakushigoto"
                        android:textColor="@color/green"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        app:cornerRadius="16dp"
                        app:strokeColor="@color/green"
                        app:strokeWidth="2dp"
                        app:icon="@android:drawable/ic_media_play"
                        app:iconTint="@color/green"
                        app:iconGravity="textStart" />

                    <!-- BGM Option 2 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bgmLittleButton"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:text="Little"
                        android:textColor="@color/green"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        app:cornerRadius="16dp"
                        app:strokeColor="@color/green"
                        app:strokeWidth="2dp"
                        app:icon="@android:drawable/ic_media_play"
                        app:iconTint="@color/green"
                        app:iconGravity="textStart" />

                    <!-- BGM Option 3 -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/bgmOrdinaryButton"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Ordinary Days"
                        android:textColor="@color/green"
                        android:textSize="15sp"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        app:cornerRadius="16dp"
                        app:strokeColor="@color/green"
                        app:strokeWidth="2dp"
                        app:icon="@android:drawable/ic_media_play"
                        app:iconTint="@color/green"
                        app:iconGravity="textStart" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Character & Speech Bubble Area -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/characterArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/speechBubble"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    app:cardBackgroundColor="@color/light_cream"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="6dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/characterCard"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/green"
                    app:strokeWidth="2dp">

                    <TextView
                        android:id="@+id/bubbleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="14dp"
                        android:text="Pick your favorite tune! Each one has its own vibe."
                        android:textColor="@color/black"
                        android:textSize="13sp"
                        android:lineSpacingExtra="2dp" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/characterCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/characterIcon"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:contentDescription="BaoBao character"
                        android:src="@drawable/baobao_main_default" />
                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Close Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/closeButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="8dp"
                android:text="Close"
                android:textColor="@color/green"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
