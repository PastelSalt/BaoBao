<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bamboo_background"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- 1. Background / Character Layer (Rendered First) -->

    <View
        android:id="@+id/characterShadow"
        android:layout_width="140dp"
        android:layout_height="28dp"
        android:alpha="0.4"
        android:background="@drawable/platform_shadow"
        app:layout_constraintBottom_toBottomOf="@id/characterImage"
        app:layout_constraintEnd_toEndOf="@id/characterImage"
        app:layout_constraintStart_toStartOf="@id/characterImage"
        android:layout_marginBottom="-5dp" />

    <ImageView
        android:id="@+id/characterImage"
        android:layout_width="418dp"
        android:layout_height="484dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:clickable="true"
        android:contentDescription="BaoBao the panda character"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/mainscreen_outfit1_fullbody_hello"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42" />

    <!-- 2. UI Interaction Layer (Rendered Last/On Top) -->

    <!-- Navigation Buttons - VERTICAL -->
    <LinearLayout
        android:id="@+id/navButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Settings Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/settingsButton"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardBackgroundColor="@color/tan"
            app:cardCornerRadius="26dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:contentDescription="Settings icon"
                android:src="@drawable/ic_settings_bamboo" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Shop Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/shopButton"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="26dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:contentDescription="Shop icon"
                android:src="@drawable/ic_shop_bamboo" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Claws for Paws Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/clawMachineButton"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginBottom="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardBackgroundColor="@color/light_green"
            app:cardCornerRadius="26dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:contentDescription="Claws for Paws icon"
                android:src="@drawable/ic_claw_nav" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Customization Button -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/customizeButton"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:cardBackgroundColor="@color/pale_green"
            app:cardCornerRadius="26dp"
            app:cardElevation="6dp"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:contentDescription="Customize icon"
                android:src="@drawable/ic_edit_bamboo" />
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Status Card -->
    <FrameLayout
        android:id="@+id/statusCard"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bamboo_status_bg"
        android:padding="4dp"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon, Oct 23"
                android:textColor="@color/gray"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:30 AM"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:layout_width="40dp"
                android:layout_height="1dp"
                android:layout_marginVertical="4dp"
                android:alpha="0.3"
                android:background="@color/tan" />

            <TextView
                android:id="@+id/currencyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3,000 âœ·"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/clawAttemptsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="ðŸŽ® 5/5"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/clawTimerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next: 4:30"
                android:textColor="@color/gray"
                android:textSize="10sp"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

    <!-- Interaction Hint Text -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/hintText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="14dp"
        app:cardElevation="1dp"
        app:strokeColor="@color/green"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toTopOf="@+id/conversationArea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="ðŸ’¡ Tap BaoBao to interact!"
            android:textColor="@color/green"
            android:textSize="11sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Conversation Area -->
    <FrameLayout
        android:id="@+id/conversationArea"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bamboo_textarea_bg"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonToggleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="120dp"
            android:scrollbars="vertical"
            android:fadeScrollbars="true">

            <com.example.baobao.coreoperations.TypewriterTextView
                android:id="@+id/conversationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="24dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Good morning! I'm so glad you're here. Let's take today one step at a time ðŸŒž"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:lineSpacingExtra="3dp"
                android:fontFamily="@font/quicksand" />
        </ScrollView>
    </FrameLayout>

    <!-- Feature Nudge -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/featureNudgeCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        android:elevation="12dp"
        app:cardBackgroundColor="@color/pale_green"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:strokeColor="@color/green"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@+id/conversationArea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/featureNudgeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="ðŸ’¡ Tap to try this feature!"
            android:textColor="@color/green"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Show Choices Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Show Choices"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:textStyle="bold"
        android:background="@drawable/bamboo_button_green"
        android:elevation="10dp"
        app:backgroundTint="@null"
        app:cornerRadius="16dp"
        app:icon="@drawable/ic_customize_bamboo"
        app:iconSize="14dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/buttonContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Bottom Buttons -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Default Buttons -->
        <LinearLayout
            android:id="@+id/defaultButtonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/jokeButton"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="Tell a Joke"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/bamboo_button_green"
                    app:backgroundTint="@null"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/affirmationButton"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Affirmation"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/bamboo_button_light_green"
                    app:backgroundTint="@null"
                    app:cornerRadius="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/selfCareButton"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="Self-Care"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/bamboo_button_tan"
                    app:backgroundTint="@null"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/goodbyeButton"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Goodbye"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:background="@drawable/bamboo_button_pale_green"
                    app:backgroundTint="@null"
                    app:cornerRadius="12dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Choices Container -->
        <LinearLayout
            android:id="@+id/conversationChoicesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
