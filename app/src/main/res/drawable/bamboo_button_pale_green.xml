<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 1. Soft Shadow/Depth -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#D2B48C" />
        </shape>
    </item>

    <!-- 2. Main Stalk Body (Subtle Bamboo Color) -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <gradient
                android:angle="0"
                android:startColor="#E6D5B8"
                android:centerColor="#F5EFE0"
                android:endColor="#E6D5B8"
                android:type="linear" />
        </shape>
    </item>

    <!-- 3. Inner Fill (The actual button color - Pale Green) -->
    <item android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="10dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="@color/pale_green" />
            <stroke android:width="1dp" android:color="#40A68B67" />
        </shape>
    </item>

    <!-- 4. Soft Bamboo Joints (Knots) -->
    <item android:width="20dp" android:height="4dp" android:gravity="top|center_horizontal" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#33A68B67" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:width="20dp" android:height="4dp" android:gravity="bottom|center_horizontal" android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#33A68B67" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:width="4dp" android:height="15dp" android:gravity="left|center_vertical" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#33A68B67" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:width="4dp" android:height="15dp" android:gravity="right|center_vertical" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#33A68B67" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>