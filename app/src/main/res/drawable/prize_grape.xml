<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Cream/beige gradient -->
    <gradient
        android:type="radial"
        android:gradientRadius="50%"
        android:centerX="0.3"
        android:centerY="0.3"
        android:startColor="#FFFDE7"
        android:centerColor="#FFF9C4"
        android:endColor="#FFF59D" />

    <stroke
        android:width="3dp"
        android:color="#DCE775" />

    <size
        android:width="60dp"
        android:height="60dp" />

</shape>


