<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 1. Soft Shadow/Depth Outline -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <solid android:color="#D2B48C" />
        </shape>
    </item>

    <!-- 2. Main Bamboo Stalk Body (Subtle Gradient) -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="26dp" />
            <gradient
                android:angle="0"
                android:startColor="#E6D5B8"
                android:centerColor="#F5EFE0"
                android:endColor="#E6D5B8"
                android:type="linear" />
        </shape>
    </item>

    <!-- 3. Inner Fill (The actual dialog area) -->
    <item android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="16dp">
        <shape android:shape="rectangle">
            <corners android:radius="18dp" />
            <solid android:color="@color/off_white" />
            <stroke android:width="1dp" android:color="#40A68B67" />
        </shape>
    </item>

    <!-- 4. Soft Bamboo Joints (Knots) -->
    <item android:width="40dp" android:height="6dp" android:gravity="top|center_horizontal" android:top="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#33A68B67" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:width="40dp" android:height="6dp" android:gravity="bottom|center_horizontal" android:bottom="9dp">
        <shape android:shape="rectangle">
            <solid android:color="#33A68B67" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:width="6dp" android:height="30dp" android:gravity="left|center_vertical" android:left="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#33A68B67" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:width="6dp" android:height="30dp" android:gravity="right|center_vertical" android:right="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#33A68B67" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>