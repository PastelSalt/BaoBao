<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 1. Soft Shadow/Depth Outline -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="28dp" />
            <solid android:color="#D2B48C" />
        </shape>
    </item>

    <!-- 2. Main Bamboo Stalk Body (Subtle Gradient) -->
    <item android:left="3dp" android:top="3dp" android:right="3dp" android:bottom="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="26dp" />
            <gradient
                android:angle="0"
                android:startColor="#E6D5B8"
                android:centerColor="#F5EFE0"
                android:endColor="#E6D5B8"
                android:type="linear" />
        </shape>
    </item>

    <!-- 3. Inner Fill (The actual card area - white) -->
    <item android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="14dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="@color/white" />
            <stroke android:width="2dp" android:color="@color/green" />
        </shape>
    </item>

    <!-- 4. Soft Bamboo Joints (Knots) - Top & Bottom -->
    <item android:width="50dp" android:height="6dp" android:gravity="top|center_horizontal" android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#33A68B67" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item android:width="50dp" android:height="6dp" android:gravity="bottom|center_horizontal" android:bottom="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#33A68B67" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <!-- Left & Right Bamboo Joints -->
    <item android:width="6dp" android:height="40dp" android:gravity="left|center_vertical" android:left="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#33A68B67" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item android:width="6dp" android:height="40dp" android:gravity="right|center_vertical" android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#33A68B67" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <!-- Corner Bamboo Accents -->
    <item android:width="12dp" android:height="12dp" android:gravity="top|left" android:left="10dp" android:top="10dp">
        <shape android:shape="oval">
            <solid android:color="#22A68B67" />
        </shape>
    </item>
    <item android:width="12dp" android:height="12dp" android:gravity="top|right" android:right="10dp" android:top="10dp">
        <shape android:shape="oval">
            <solid android:color="#22A68B67" />
        </shape>
    </item>
    <item android:width="12dp" android:height="12dp" android:gravity="bottom|left" android:left="10dp" android:bottom="14dp">
        <shape android:shape="oval">
            <solid android:color="#22A68B67" />
        </shape>
    </item>
    <item android:width="12dp" android:height="12dp" android:gravity="bottom|right" android:right="10dp" android:bottom="14dp">
        <shape android:shape="oval">
            <solid android:color="#22A68B67" />
        </shape>
    </item>
</layer-list>
