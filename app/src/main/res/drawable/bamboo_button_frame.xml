<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Main button background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="@color/green" /> <!-- Default color, will be overridden by backgroundTint -->
        </shape>
    </item>

    <!-- Bamboo Frame (Inner Stroke) -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#4DFFFFFF" /> <!-- Subtle white-bamboo inner frame -->
        </shape>
    </item>

    <!-- Stylized Bamboo Joints (Small vertical lines) -->
    <item android:width="2dp" android:height="8dp" android:gravity="top|left" android:left="20dp" android:top="2dp">
        <shape android:shape="rectangle"><solid android:color="#4DFFFFFF" /></shape>
    </item>
    <item android:width="2dp" android:height="8dp" android:gravity="top|right" android:right="20dp" android:top="2dp">
        <shape android:shape="rectangle"><solid android:color="#4DFFFFFF" /></shape>
    </item>
    <item android:width="2dp" android:height="8dp" android:gravity="bottom|left" android:left="20dp" android:bottom="2dp">
        <shape android:shape="rectangle"><solid android:color="#4DFFFFFF" /></shape>
    </item>
    <item android:width="2dp" android:height="8dp" android:gravity="bottom|right" android:right="20dp" android:bottom="2dp">
        <shape android:shape="rectangle"><solid android:color="#4DFFFFFF" /></shape>
    </item>
</layer-list>