<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 1. Soft Shadow/Depth Outline -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="22dp" />
            <solid android:color="#D2B48C" />
        </shape>
    </item>

    <!-- 2. Main Bamboo Stalk Body (Subtle Gradient) -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:angle="0"
                android:startColor="#E6D5B8"
                android:centerColor="#F5EFE0"
                android:endColor="#E6D5B8"
                android:type="linear" />
        </shape>
    </item>

    <!-- 3. Inner Fill (White bubble) -->
    <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="@color/white" />
            <stroke android:width="1.5dp" android:color="@color/green" />
        </shape>
    </item>

    <!-- 4. Bamboo Joints (Knots) -->
    <item android:width="12dp" android:height="3dp" android:gravity="top|center_horizontal" android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#33A68B67" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item android:width="12dp" android:height="3dp" android:gravity="bottom|center_horizontal" android:bottom="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#33A68B67" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>
